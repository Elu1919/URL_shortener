<div class="container">

  <label for="original-link"
         class="card mx-auto mt-5 p-4"
         style="width: 70%;">

    <div class="mx-auto mt-4">
      <h3 class="card-title fw-bold">URL Shortener</h3>
    </div>

    <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png"
         class="card-img-top mx-auto mt-4 mb-5"
         style="width: 80px"
         alt="...">

    <div class="card-body">
      <form action="/shorten"
            method="post">

        <!-- input link -->
        <div class="mb-4">
          <input type="url"
                 class="form-control bg-light border-0"
                 name="originalLink"
                 placeholder="Input URL here"
                 aria-label="URLtoShorten"
                 required />
        </div>

        <!-- submit -->
        <div class="d-grid gap-2 col-6 mx-auto">
          <button type="submit"
                  class="btn btn-outline-primary">Shorten</button>
        </div>

      </form>

    </div>
  </label>

</div>